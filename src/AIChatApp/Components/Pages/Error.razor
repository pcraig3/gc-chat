@page "/{culture}/Error"
@using System.Diagnostics
@inject JsonLocalizationService L

<PageTitle>@L._("Pages.Error.Title") — @L._("Pages.Home.Title")</PageTitle>

<h1 class="text-danger" property="name" id="wb-cont" tabindex="-1">@L._("Pages.Error.Heading")</h1>
<h2 class="text-danger">@L._("Pages.Error.Subheading")</h2>

@if (ShowRequestId)
{
    <p>
        <strong>@L._("Pages.Error.RequestIdLabel")</strong> <code>@RequestId</code>
    </p>
}

<h3>@L._("Pages.Error.DevelopmentModeHeading")</h3>
<p>
    @L._("Pages.Error.DevelopmentModeInfo")
</p>
<p>
    @L._("Pages.Error.SecurityWarning")
</p>

@code {
    [Parameter]
    public string? Culture { get; set; }

    [CascadingParameter]
    private HttpContext? HttpContext { get; set; }

    private string? RequestId { get; set; }
    private bool ShowRequestId => !string.IsNullOrEmpty(RequestId);

    protected override void OnInitialized() =>
    RequestId = Activity.Current?.Id ?? HttpContext?.TraceIdentifier;
}